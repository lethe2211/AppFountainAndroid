<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#e8e8e8"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/list_item_question_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/list_item_question_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/list_item_question_category"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="タイトルタイトルタイトルタイトルタイトルタイトルタイトルタイトルタイトルタイトル"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/list_item_question_snippet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/list_item_question_title"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="スニペットスニペットスニペットスニペットスニペットスニペットスニペットスニペットスニペットスニペットスニペットスニペットスニペットスニペットスニペット"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/list_item_question_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/list_item_question_title"
                    android:layout_alignLeft="@+id/list_item_question_category"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/category_1_app_widgets" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/list_item_question_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="↑"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/list_item_question_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="↓"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" >

            <TextView
                android:id="@+id/list_item_question_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="タグ"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/list_item_question_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="回答数"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/list_item_question_comment_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/list_item_question_comment_count"
                android:text="済"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/list_item_question_created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/list_item_question_comment_done"
                android:text="2013/12/1 21:09:32"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>