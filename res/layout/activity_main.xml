<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/move_to_top_activity_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="TopActivity" />

    <Button
        android:id="@+id/move_to_login_activity_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="LoginActivity" />

    <Button
        android:id="@+id/move_to_post_activity_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="PostActivity" />

    <Button
        android:id="@+id/move_to_question_detail_activity_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="QuestionDetailActivity" />

    <Button
        android:id="@+id/move_to_user_page_activity_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="UserPageActivity" />

    <Button
        android:id="@+id/move_to_search_result_activity_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="SearchResultActivity" />

</LinearLayout>