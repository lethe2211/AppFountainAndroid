<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appfountain"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name="com.appfountain.MainActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.appfountain.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="com.appfountain.TopPageActivity"
            android:label="@string/title_activity_top_page" >
        </activity>
        <activity
            android:name="com.appfountain.PostActivity"
            android:label="@string/title_activity_post" >
        </activity>
        <activity
            android:name="com.appfountain.UserPageActivity"
            android:label="@string/title_activity_user_page" >
        </activity>
        <activity
            android:name="com.appfountain.QuestionDetailActivity"
            android:label="@string/title_activity_question_detail" >
        </activity>
        <activity
            android:name="com.appfountain.SearchResultActivity"
            android:label="@string/title_activity_search_result" >
        </activity>
        <activity
            android:name="com.appfountain.RegisterActivity"
            android:label="@string/title_activity_register"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="com.appfountain.PostBodyActivity"
            android:label="@string/title_activity_post_body" >
        </activity>
    </application>

</manifest>